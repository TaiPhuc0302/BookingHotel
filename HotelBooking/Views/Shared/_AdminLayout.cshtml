﻿
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        body {
            padding-top: 56px;
        }

        .sidebar {
            position: fixed;
            top: 56px;
            bottom: 0;
            left: 0;
            width: 250px;
            background-color: #343a40;
            padding-top: 20px;
            overflow-y: auto;
        }

            .sidebar .nav-link {
                color: #fff;
                padding: 12px 20px;
                border-left: 3px solid transparent;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #495057;
                    border-left-color: #007bff;
                }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    width: 20px;
                }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Admin/Hotel/Index">
                <i class="fas fa-cog"></i> Admin Panel - Hotel Booking
            </a>
            <div class="d-flex">
                <span class="text-white me-3">
                    <i class="fas fa-user"></i> @User.Identity.Name
                </span>
                <a href="#" onclick="logout(); return false;" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                </a>
            </div>
        </div>
    </nav>

    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Hotel/Index">
                    <i class="fas fa-hotel"></i> Khách sạn
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Room/Index">
                    <i class="fas fa-bed"></i> Phòng
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Booking/Index">
                    <i class="fas fa-calendar-check"></i> Booking
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Users/Index">
                    <i class="fas fa-circle-user"></i> Tài Khoản
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Customers/Index">
                    <i class="fas fa-users"></i> Khách Hàng
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Promo/Index">
                    <i class="fas fa-tags"></i> Khuyến mãi
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Loyalty/Index">
                    <i class="fas fa-star"></i> Loyalty Tiers
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Review/Index">
                    <i class="fas fa-comment"></i> Đánh giá
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Report/Revenue">
                    <i class="fas fa-chart-line"></i> Báo cáo
                </a>
            </li>
            <li class="nav-item mt-3">
                <a class="nav-link" href="/">
                    <i class="fas fa-home"></i> Về trang chủ
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function logout() {
            if (confirm("Bạn có chắc chắn muốn đăng xuất?")) {
                $.ajax({
                    type: "POST",
                    url: window.location.origin + '/Account/Logout',
                    success: function () {
                        window.location.href = '/';
                    }
                });
            }
        }

        // Highlight active menu
        $(document).ready(function () {
            var path = window.location.pathname;
            $('.sidebar .nav-link').each(function () {
                var href = $(this).attr('href');
                if (path.indexOf(href) === 0 && href !== '/') {
                    $(this).addClass('active');
                }
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
