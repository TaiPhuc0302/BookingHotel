@model HotelBooking.Models.Hotel

<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-4">
            @if (Model.HotelImages != null && Model.HotelImages.Any())
            {
                <img src="@Model.HotelImages.First().Url" class="card-img" alt="@Model.Name">
            }
            else
            {
                <img src="~/Content/images/no-image.png" class="card-img" alt="No image">
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">
                    <small class="text-muted">
                        @for (int i = 0; i < Model.StarRating; i++)
                        {
                            <span>⭐</span>
                        }
                    </small>
                </p>
                <p class="card-text">@Model.Address, @Model.City, @Model.Country</p>
                <p class="card-text">@(Model.Description?.Substring(0, Math.Min(100, Model.Description.Length ?? 0)))</p>
                <a href="@Url.Action("Details", "Hotel", new { id = Model.Id })" class="btn btn-primary">Xem chi tiết</a>
            </div>
        </div>
    </div>
</div>