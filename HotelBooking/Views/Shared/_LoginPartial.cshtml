@if (Request.IsAuthenticated)
{
    <text>
        Xin chào, <strong>@User.Identity.Name</strong>
        <form method="post" action="@Url.Action("Logout", "Account")" style="display:inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-link">Đăng xuất</button>
        </form>
    </text>
}
else
{
    <a href="@Url.Action("Login", "Account")">Đăng nhập</a>
    <span> | </span>
    <a href="@Url.Action("Register", "Account")">Đăng ký</a>
}