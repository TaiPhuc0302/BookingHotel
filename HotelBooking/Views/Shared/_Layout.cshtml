<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hotel Booking</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        body {
            padding-top: 70px;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        footer {
            margin-top: 50px;
            padding: 20px 0;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-hotel"></i> Hotel Booking
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Search/Index">Tìm kiếm</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Customer/Booking/Index">
                                    <i class="fas fa-calendar-check"></i> Booking
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Customer/Review/Index">
                                    <i class="fas fa-star"></i> Đánh giá
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Customer/Loyalty/Index">
                                    <i class="fas fa-gift"></i> Loyalty
                                </a>
                            </li>
                        }

                        if (User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Hotel/Index">
                                    <i class="fas fa-cog"></i> Admin
                                </a>
                            </li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                @if (User.IsInRole("customer"))
                                {
                                    <li>
                                        <a class="dropdown-item" href="/Customer/Profile/Index">
                                            <i class="fas fa-user-circle"></i> Hồ sơ
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                }
                                <li>
                                    <a class="dropdown-item" href="#" onclick="logout(); return false;">
                                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Đăng ký</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <div class="container text-center">
            <p class="mb-0">© 2025 Hotel Booking System - Nhóm 3</p>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function logout() {
            if (confirm("Bạn có chắc chắn muốn đăng xuất?")) {
                $.ajax({
                    type: "POST",
                    url: window.location.origin + '/Account/Logout',
                    success: function () {
                        window.location.href = '/';
                    }
                });
            }
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
