@{
    ViewBag.Title = "Quản lý Khách sạn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">Quản lý Khách sạn</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="/Admin/Hotel">Admin</a></li>
                    <li class="breadcrumb-item active">Khách sạn</li>
                </ol>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-sm-12">
                <a href="/Admin/Hotel/Create" class="btn btn-success" style="float:right">+ Thêm khách sạn</a>
            </div>

            <div class="col-sm-12 mt-3" id="div_ShowData">
                <table id="tbl_hotels" class="table table-bordered table-striped">
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var url_domain = window.location.origin;

        $(document).ready(function () {
            loadHotels();
        });

        function loadHotels() {
            $.ajax({
                type: "GET",
                url: url_domain + '/Admin/Hotel/GetAllHotels',
                success: function (response) {
                    console.log(response);

                    if (response.success) {
                        var hotels = response.data;
                        var tbl = $("#tbl_hotels");
                        var html = "<thead><tr>";
                        html += "<th>STT</th><th>Tên khách sạn</th><th>Thành phố</th>";
                        html += "<th>Quốc gia</th><th>Sao</th><th>Trạng thái</th><th>Thao tác</th>";
                        html += "</tr></thead><tbody>";

                        for (var i = 0; i < hotels.length; i++) {
                            var hotel = hotels[i];
                            var statusBadge = hotel.IsActive
                                ? '<span class="badge bg-success">Active</span>'
                                : '<span class="badge bg-secondary">Inactive</span>';

                            html += "<tr>";
                            html += "<td>" + (i + 1) + "</td>";
                            html += "<td>" + hotel.Name + "</td>";
                            html += "<td>" + hotel.City + "</td>";
                            html += "<td>" + hotel.Country + "</td>";
                            html += "<td>" + hotel.StarRating + " ⭐</td>";
                            html += "<td>" + statusBadge + "</td>";
                            html += "<td>";
                            html += "<a href='" + url_domain + "/Admin/Hotel/Details/" + hotel.Id + "' class='btn btn-sm btn-info'>Chi tiết</a> ";
                            html += "<a href='" + url_domain + "/Admin/Hotel/Edit/" + hotel.Id + "' class='btn btn-sm btn-warning'>Sửa</a> ";
                            html += "<button type='button' class='btn btn-sm btn-danger' onclick='deleteHotel(" + hotel.Id + ")'>Xóa</button>";
                            html += "</td></tr>";
                        }

                        html += "</tbody>";
                        tbl.html(html);
                    } else {
                        $("#div_ShowData").html("<p style='color: red;'>" + response.message + "</p>");
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                    $("#div_ShowData").html("<p style='color: red;'>Đã xảy ra lỗi khi tải dữ liệu</p>");
                }
            });
        }

        function deleteHotel(id) {
            if (confirm("Bạn có chắc chắn muốn xóa khách sạn này không?")) {
                $.ajax({
                    type: "POST",
                    url: url_domain + '/Admin/Hotel/DeleteHotel',
                    data: JSON.stringify({ id: id }),
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            loadHotels(); // Refresh
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("Đã xảy ra lỗi khi xóa");
                    }
                });
            }
        }
    </script>
}