@{
    ViewBag.Title = "Hồ sơ của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hồ sơ của tôi</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Thông tin cá nhân</h4>
            </div>
            <div class="card-body">
                <form id="profileForm">
                    <div id="success-message" class="alert alert-success" style="display:none;"></div>
                    <div id="error-message" class="alert alert-danger" style="display:none;"></div>

                    <div class="form-group mb-3">
                        <label>Email</label>
                        <input type="text" class="form-control" id="email" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label for="fullName">Họ tên</label>
                        <input type="text" class="form-control" id="fullName" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="phone">Số điện thoại</label>
                        <input type="tel" class="form-control" id="phone" />
                    </div>

                    <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h4>Bảo mật</h4>
            </div>
            <div class="card-body">
                <a href="/Customer/Profile/ChangePassword" class="btn btn-warning">Đổi mật khẩu</a>
                <a href="/Customer/Profile/Delete" class="btn btn-danger">Xóa tài khoản</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Loyalty Points</h5>
            </div>
            <div class="card-body text-center" id="loyaltyInfo">
                <p class="text-muted">Đang tải...</p>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            loadProfile();
            loadLoyaltyInfo();

            $("#profileForm").submit(function (e) {
                e.preventDefault();
                updateProfile();
            });
        });

        function loadProfile() {
            $.ajax({
                type: "GET",
                url: window.location.origin + '/Customer/Profile/GetProfile',
                success: function (response) {
                    if (response.success) {
                        $("#email").val(response.data.Email);
                        $("#fullName").val(response.data.FullName);
                        $("#phone").val(response.data.Phone);
                    }
                }
            });
        }

        function loadLoyaltyInfo() {
            $.ajax({
                type: "GET",
                url: window.location.origin + '/Customer/Profile/GetLoyaltyInfo',
                success: function (response) {
                    if (response.success) {
                        var html = '<h1 class="text-primary">' + response.points + '</h1>';
                        html += '<p>Điểm tích lũy</p>';
                        html += '<p><strong>Hạng:</strong> ' + response.tierName + '</p>';
                        html += '<a href="/Customer/Loyalty/Index" class="btn btn-info btn-sm">Xem chi tiết</a>';
                        $("#loyaltyInfo").html(html);
                    }
                }
            });
        }

        function updateProfile() {
            var formData = {
                FullName: $("#fullName").val(),
                Phone: $("#phone").val()
            };

            $.ajax({
                type: "POST",
                url: window.location.origin + '/Customer/Profile/UpdateProfile',
                data: JSON.stringify(formData),
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    if (response.success) {
                        $("#success-message").text(response.message).show();
                        $("#error-message").hide();
                    } else {
                        $("#error-message").text(response.message).show();
                        $("#success-message").hide();
                    }
                }
            });
        }
    </script>
}